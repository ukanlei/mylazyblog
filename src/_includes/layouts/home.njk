---
layout: layouts/base.njk
templateClass: tmpl-home
---

{# The Home page uses this template–it extends the base template #}

<div class="wrapper home">
  <div class="content">
    <section>
      {{ info.section1.img }}
      {{ info.section1.tag }}
      {{ info.section1.title }}
      {{ info.section1.summary }}
    </section>
    <section>
      {{ info.section2.img }}
      {{ info.section2.tag }}
      {{ info.section2.title }}
      {{ info.section2.summary }}
    </section>
     <section>
       <div>
        {{ info.section3.card1.img }}
        {{ info.section3.card1.tag }}
        {{ info.section3.card1.title }}
        {{ info.section3.card1.summary }}
        </div>
        <div>
        {{ info.section3.card2.img }}
        {{ info.section3.card2.tag }}
        {{ info.section3.card2.title }}
        {{ info.section3.card2.summary }}
        </div>
        <div>
        {{ info.section3.card3.img }}
        {{ info.section3.card3.tag }}
        {{ info.section3.card3.title }}
        {{ info.section3.card3.summary }}
        </div>
    </section>
    {{ content | safe }}
    
    {# After the the content defined in index.md, list the blog posts in the collection #}
    <ul>
      {%- for post in collections.posts -%}
        <li{% if page.url == post.url %} aria-current="page"{% endif %}>{{ post.data.page.date | htmlDateString }} — <a href='{{ post.url }}'>{{ post.data.title }}</a></li>
      {%- endfor -%}
      <li><a href="/posts">View all posts</a></li>
    </ul>
  </div>
</div>


