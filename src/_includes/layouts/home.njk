---
layout: layouts/base.njk
templateClass: tmpl-home
---

{# The Home page uses this templateâ€“it extends the base template #}

<div class="wrapper home">
  <div class="content">
    <section class="first-section">
      <div class="section1-info">
        <button class="card-tags">{{info.section1.tag}}</button>
        <div class="section1-header">{{info.section1.title}}</div>
        {{info.section1.summary}}
      </div>
      <img class="section1-img" src="{{info.section1.img}}" alt="{{info.section1.imgAlt}}">
    </section>
    <section class="line-break"> More stuff to read </section>
    <section class="row-of-cards">
      <div class="cards">
        <img class="cards" src="{{info.section3.card1.img}}" alt="{{info.section3.card1.imgAlt}}">
        <div>
          <button class="card-tags">{{info.section3.card1.tag}}</button>
          <h4>{{info.section3.card1.title}}</h4>
          <p>{{info.section3.card1.summary}}</p>
        </div>
      </div>
      <div class="cards">
        <img class="cards" src="{{info.section3.card2.img}}" alt="{{info.section3.card2.imgAlt}}">
        <div>
          <button class="card-tags">{{info.section3.card2.tag}}</button>
          <h4>{{info.section3.card2.title}}</h4>
          <p>{{info.section3.card2.summary}}</p>
        </div>
      </div>
      <div class="cards">
        <img class="cards" src="{{info.section3.card3.img}}" alt="{{info.section3.card3.imgAlt}}">
        <div>
          <button class="card-tags">{{info.section3.card3.tag}}</button>
          <h4>{{info.section3.card3.title}}</h4>
          <p>{{info.section3.card3.summary}}</p>
        </div>
      </div>
    </section>
    <section class="lazySection">
      <img class="cover" src="{{info.section2.img}}" alt="{{info.section2.imgAlt}}">
      <h3 class="whoislazy">{{info.section2.title}}</h3>
    </section>
  </div>
</div>

